<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>popcorn-time</artifactId>
        <groupId>com.github.yoep</groupId>
        <version>0.0.5-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>application</artifactId>
    <description>Popcorn Time is a multi-platform, free software BitTorrent client that includes an integrated media player.</description>

    <properties>
        <java.version>11</java.version>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>

        <start-class>com.github.yoep.popcorn.PopcornTimeStarter</start-class>
        <testfx.version>4.0.16-alpha</testfx.version>
    </properties>

    <dependencies>
        <!-- Popcorn Time -->
        <dependency>
            <groupId>com.github.yoep</groupId>
            <artifactId>application-ui</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.github.yoep</groupId>
            <artifactId>video-javafx</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.github.yoep</groupId>
            <artifactId>video-vlc</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.github.yoep</groupId>
            <artifactId>video-vlc-native</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.github.yoep</groupId>
            <artifactId>video-youtube</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.github.yoep</groupId>
            <artifactId>torrent-frostwire</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.github.yoep</groupId>
            <artifactId>torrent-stream</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- Testing -->
        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest-core</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-engine</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.testfx</groupId>
            <artifactId>testfx-core</artifactId>
            <version>${testfx.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.testfx</groupId>
            <artifactId>testfx-junit5</artifactId>
            <version>${testfx.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>io.github.fvarrui</groupId>
                    <artifactId>javapackager</artifactId>
                    <version>1.4.2</version>
                </plugin>
                <plugin>
                    <groupId>com.gluonhq</groupId>
                    <artifactId>client-maven-plugin</artifactId>
                    <version>0.1.31</version>
                </plugin>
            </plugins>
        </pluginManagement>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <annotationProcessorPaths>
                        <path>
                            <groupId>org.projectlombok</groupId>
                            <artifactId>lombok</artifactId>
                            <version>${lombok.version}</version>
                        </path>
                    </annotationProcessorPaths>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.gluonhq</groupId>
                <artifactId>client-maven-plugin</artifactId>
                <configuration>
                    <mainClass>${start-class}</mainClass>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <configuration>
                    <finalName>popcorn-time</finalName>
                    <keepDependenciesWithProvidedScope>false</keepDependenciesWithProvidedScope>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <transformers>
                                <transformer implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
                                    <resource>META-INF/spring.handlers</resource>
                                </transformer>
                                <transformer implementation="org.springframework.boot.maven.PropertiesMergingResourceTransformer">
                                    <resource>META-INF/spring.factories</resource>
                                </transformer>
                                <transformer implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
                                    <resource>META-INF/spring.schemas</resource>
                                </transformer>
                                <transformer implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer" />
                                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                    <mainClass>${start-class}</mainClass>
                                </transformer>
                            </transformers>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>io.github.fvarrui</groupId>
                <artifactId>javapackager</artifactId>
                <configuration>
                    <mainClass>${start-class}</mainClass>
                    <runnableJar>${project.build.directory}/popcorn-time.jar</runnableJar>
                    <bundleJre>true</bundleJre>
                    <copyDependencies>false</copyDependencies>
                    <generateInstaller>true</generateInstaller>
                    <administratorRequired>false</administratorRequired>
                    <platform>auto</platform>
                    <customizedJre>false</customizedJre>
                    <name>popcorn-time</name>
                    <displayName>Popcorn Time</displayName>
                    <organizationName>Popcorn Time</organizationName>
                    <assetsDir>../assets</assetsDir>
                    <licenseFile>../LICENSE</licenseFile>
                    <version>${project.version}</version>
                    <vmArgs>
                        <param>-Dsun.awt.disablegrab=true</param>
                        <param>-Dprism.dirtyopts=false</param>
                        <param>-Dprism.lcdtext=false</param>
                        <param>-XX:+UseG1GC</param>
                    </vmArgs>
                    <linuxConfig>
                        <generateRpm>false</generateRpm>
                    </linuxConfig>
                    <winConfig>
                        <generateMsi>false</generateMsi>
                        <generateMsm>false</generateMsm>
                        <productName>Popcorn Time</productName>
                        <setupLanguages>
                            <english>compiler:Default.isl</english>
                            <dutch>compiler:Languages\Dutch.isl</dutch>
                        </setupLanguages>
                        <setupMode>askTheUser</setupMode>
                        <createDesktopIconTask>true</createDesktopIconTask>
                    </winConfig>
                </configuration>
                <executions>
                    <execution>
                        <phase>install</phase>
                        <goals>
                            <goal>package</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>windows</id>

            <properties>
                <platform>windows</platform>
            </properties>

            <build>
                <plugins>
                    <plugin>
                        <groupId>io.github.fvarrui</groupId>
                        <artifactId>javapackager</artifactId>
                        <configuration>
                            <additionalResources>
                                <param>${project.basedir}/../assets/${platform}/jlibtorrent.dll</param>
                                <param>${project.basedir}/../assets/${platform}/vlc/libvlc.dll</param>
                                <param>${project.basedir}/../assets/${platform}/vlc/libvlccore.dll</param>
                                <param>${project.basedir}/../assets/${platform}/vlc/lua</param>
                                <param>${project.basedir}/../assets/${platform}/vlc/plugins</param>
                            </additionalResources>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>linux</id>

            <properties>
                <platform>linux</platform>
            </properties>

            <build>
                <plugins>
                    <plugin>
                        <groupId>io.github.fvarrui</groupId>
                        <artifactId>javapackager</artifactId>
                        <configuration>
                            <additionalResources>
                                <param>${project.basedir}/../assets/${platform}/libjlibtorrent.so</param>
                                <param>${project.basedir}/../assets/${platform}/libPopcornKeys.so</param>
                                <param>${project.basedir}/../assets/${platform}/libPopcornPlayer.so</param>
                                <param>${project.basedir}/../assets/${platform}/vlc/libvlc.so</param>
                                <param>${project.basedir}/../assets/${platform}/vlc/libvlccore.so</param>
                            </additionalResources>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>linux-arm</id>

            <properties>
                <platform>linux-arm</platform>
            </properties>

            <build>
                <plugins>
                    <plugin>
                        <groupId>io.github.fvarrui</groupId>
                        <artifactId>javapackager</artifactId>
                        <configuration>
                            <additionalResources>
                                <param>${project.basedir}/../assets/${platform}/libjlibtorrent.so</param>
                                <param>${project.basedir}/../assets/${platform}/libPopcornKeys.so</param>
                                <param>${project.basedir}/../assets/${platform}/libPopcornPlayer.so</param>
                                <param>${project.basedir}/../assets/${platform}/vlc/libvlc.so</param>
                                <param>${project.basedir}/../assets/${platform}/vlc/libvlccore.so</param>
                            </additionalResources>
                            <vmArgs>
                                <param>-Dvlc.path=/usr/lib/arm-linux-gnueabihf</param>
                                <param>-Djava.library.path=".:/usr/lib/arm-linux-gnueabihf:$PATH"</param>
                                <param>-Djavafx.platform=gtk</param>
                                <param>-Dsun.awt.disablegrab=true</param>
                                <param>-Dprism.dirtyopts=false</param>
                                <param>-Dprism.lcdtext=false</param>
                                <param>-XX:+UseG1GC</param>
                                <param>-Xmx400M</param>
                                <param>-Xms100M</param>
                            </vmArgs>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>cmake</id>

            <build>
                <plugins>
                    <plugin>
                        <groupId>com.googlecode.cmake-maven-project</groupId>
                        <artifactId>cmake-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>cmake-generate</id>
                                <goals>
                                    <goal>generate</goal>
                                </goals>
                                <configuration>
                                    <sourcePath>${project.parent.basedir}</sourcePath>
                                    <targetPath>${project.build.directory}/cmake-build</targetPath>
                                    <options>
                                        <option>-DCMAKE_BUILD_TYPE=${cmake.type}</option>
                                        <!-- The path to the QT compiler -->
                                        <!-- e.g.: /opt/Qt/5.15.0/gcc_64 -->
                                        <option>-DCMAKE_PREFIX_PATH=${CMAKE_PREFIX_PATH}</option>
                                        <!-- The path to the QT module path -->
                                        <!-- e.g.: /opt/Qt/5.15.0/gcc_64/lib -->
                                        <option>-DCMAKE_MODULE_PATH=${CMAKE_MODULE_PATH}</option>
                                    </options>
                                    <environmentVariables>
                                        <CMAKE_LIBRARY_OUTPUT_DIRECTORY>${project.parent.basedir}/assets/${platform}</CMAKE_LIBRARY_OUTPUT_DIRECTORY>
                                    </environmentVariables>
                                </configuration>
                            </execution>
                            <execution>
                                <id>cmake-compile</id>
                                <goals>
                                    <goal>compile</goal>
                                </goals>
                                <configuration>
                                    <projectDirectory>${project.build.directory}/cmake-build</projectDirectory>
                                    <target>all</target>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
